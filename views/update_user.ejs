<%- include('include/_header') %>

<main class="container">
    <div class="flex">
        <a href="/" class=" btn btn-primary text-decoration-none">
            <i class="fas fa-angle-double-left"></i> 
            All Users
        </a>
    </div>

    <div class="text-center">
        <h1>Use the Below form to update an Employee Details</h1>
    </div>

    <form   method="post" class="form-group"  >
      
        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="firstname" name="firstname" value="<%= data.firstname %>" >
            <label for="firstname">First Name</label>
        </div>
        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="lasttname" name="lastname"  value="<%= data.lastname %>" >
            <label for="lasttname">Last Name</label>
        </div>
        <div class="form-floating mb-3">
            <input type="number" class="form-control" id="age" name="age" value="<%= data.age %>" >
            <label for="age">Age</label>
        </div>
        <div class="form-floating mb-3">
            <input type="number" class="form-control" id="salary" name="salary"  value="<%= data.salary %>" >
            <label for="salary">Salary</label>
        </div>
        <div class="form-floating mb-3">
            <input type="email" class="form-control" id="email" name="email"  value="<%= data.email %>">
            <label for="email">Email address</label>
        </div>
       
    
        <input type="submit" class="btn btn-primary" value="Update">
    </form>
</main>

</body>
</html>